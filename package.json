{
  "name": "auth",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setenv": "set -a;source ../config/.env;source .env;set +a",
    "prebuild": "yarn install&&rm -rf build",
    "build": "webpack",
    "init": "initSchema",
    "initES": "INIT_ES=1 initSchema && /bin/sh script/modify_es_schema.sh",
    "start": "scirichon-crud-api",
    "test": "mocha",
    "sync-mysql": "SYNC_TYPE=mysql node sync.js",
    "sync-nextcloud": "SYNC_TYPE=nextcloud node sync.js",
    "sync-ldap": "SYNC_TYPE=ldap node sync.js",
    "sync-roles": "SYNC_TYPE=acl node sync.js",
    "upgradeUserId2Str": "cat ./cypher/upgradeUserId2Str.cyp | $NEO4J_HOME/bin/cypher-shell -u neo4j -p admin --format plain"
  },
  "keywords": [
    "jwt",
    "rbac",
    "acl",
    "passport",
    "ldap",
    "nextcloud"
  ],
  "author": "Ron.Yang <yrong1997@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "acl-fork": "0.4.10-beta.3",
    "bcryptjs": "^2.3.0",
    "config": "^1.25.1",
    "jsonwebtoken": "^7.2.1",
    "koa-compose": "^3.2.1",
    "koa-passport": "^4.0",
    "koa-session": "^5.0",
    "ldapauth-fork-plus": "^4.0.1",
    "lodash": "^4.17.4",
    "license-helper": "^1.0.5",
    "mysql": "^2.12.0",
    "neo4j-driver": "^1.5.0",
    "parse-neo4j-fork": "0.6.10",
    "passport-ldapauth-fork": "^1.0.2",
    "passport-local": "^1.0.0",
    "uuid": "^3.0.0",
    "webdav": "^0.9.0",
    "redis":"^2.8.0",
    "redis-crud-fork": "^1.0.1",
    "scirichon-common": "^1.0.4",
    "scirichon-response-wrapper": "^1.0.1",
    "scirichon-json-schema": "^1.0.3",
    "scirichon-json-schema-init": "^1.0.3",
    "scirichon-cache": "^1.0.8",
    "scirichon-search": "^1.0.2",
    "scirichon-crud-handler": "^1.0.5"
  },
  "devDependencies": {
    "webpack-builder-advanced": "^1.0.1"
  }
