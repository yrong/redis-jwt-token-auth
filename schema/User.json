  "loadUrl":"/auth/userinfo",
  "cache":{"exclude_fields":["passwd","id"]},
  "search":{"index":"user"},
  "properties": {
    "name":{
      "type": "string"
    },
    "internalId":{
      "type": "string",
      "schema":"User"
